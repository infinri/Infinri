{
  "name": "infinri",
  "version": "1.0.0",
  "description": "A high-performance portfolio website",
  "scripts": {
    "dev": "bun run --watch",
    "build": "bun run build:css && bun run build:js",
    "build:css": "lightningcss --bundle --minify --nesting --bundle --sourcemap --output-file public/assets/css/app.css resources/less/app.less",
    "build:js": "esbuild resources/js/app.js --bundle --minify --sourcemap --outfile=public/assets/js/app.js"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.20.2",
    "lightningcss": "^1.25.1",
    "lightningcss-cli": "^1.0.0",
    "less": "^4.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.1",
    "@types/bun": "latest"
  },
  "dependencies": {
    "alpinejs": "^3.14.0",
    "htmx.org": "^1.9.12"
  },
  "module": "index.ts",
  "type": "module",
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
