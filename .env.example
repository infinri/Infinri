# ====================================
# Application Environment
# ====================================
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_KEY=base64:generate_a_secure_key_here

# ====================================
# Database Configuration (PostgreSQL)
# ====================================
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=portfolio
DB_USERNAME=postgres
DB_PASSWORD=postgres

# PgBouncer (optional)
# DB_PGBOUNCER=true
# DB_PGBOUNCER_PORT=6432

# ====================================
# Redis (Cache & Sessions)
# ====================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# ====================================
# Email (Brevo)
# ====================================
MAIL_MAILER=brevo
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=your_brevo_username
MAIL_PASSWORD=your_brevo_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=hello@yourdomain.com
MAIL_FROM_NAME="Portfolio"

# ====================================
# Authentication
# ====================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true

# ====================================
# Logging & Debugging
# ====================================
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

# ====================================
# Application Features
# ====================================
FEATURE_MAINTENANCE_MODE=false
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true

# ====================================
# Security Headers
# ====================================
SECURE_HEADERS_HSTS_ENABLED=true
SECURE_HEADERS_HSTS_MAX_AGE=31536000
SECURE_HEADERS_CONTENT_SECURITY_POLICY="default-src 'self'"

# ====================================
# Admin Configuration
# ====================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_secure_password

# ====================================
# External Services
# ====================================
# Google reCAPTCHA
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ====================================
# Rate Limiting
# ====================================
RATE_LIMIT=60,1
RATE_LIMIT_AUTH=30,1
