# Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# Application Environment (development/production)
APP_ENV=production

# Site Configuration
SITE_NAME=
SITE_URL=

# Security
CSRF_ENABLED=true
HTTPS_ONLY=true

# Brevo Email Configuration (for contact form)
# Digital Ocean blocks port 587, so we use Brevo's API (HTTPS) instead of SMTP
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=Infinri Portfolio
# Note: Customer name will be shown as sender (e.g., "John Doe (via Infinri Portfolio)")
BREVO_RECIPIENT_EMAIL=your-email@example.com
BREVO_RECIPIENT_NAME=Your Name

# Brevo Contacts Configuration (for contact database integration)
# Set to 'true' to automatically add form submissions to Brevo contacts
# Get your list ID from: https://app.brevo.com/contact/list
BREVO_CONTACTS_ENABLED=true
BREVO_LIST_ID=your-list-id-here

# Google reCAPTCHA v3
RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here
RECAPTCHA_ENABLED=true
RECAPTCHA_MIN_SCORE=0.5
