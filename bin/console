#!/usr/bin/env php
<?php
declare(strict_types=1);

/**
 * Portfolio Console Application
 * 
 * Command-line interface for project management
 */

// Bootstrap
require_once __DIR__ . '/../vendor/autoload.php';

use App\Console\Application;

try {
    $app = new Application();
    $app->run($argv);
} catch (Throwable $e) {
    echo "Error: " . $e->getMessage() . PHP_EOL;
    exit(1);
}
