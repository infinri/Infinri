# Caddy Configuration for Infinri Portfolio
{
	admin off

	servers {
		protocols h1 h2

		# Minimal timeouts
		timeouts {
			read_body 30s
			read_header 10s
			write 30s
			idle 20s
		}

		max_header_size 16KB
	}

	log {
		output discard
	}
}

# Local development
:8080 {
	root * /home/infinri/Initrix/Projects/Portfolio/pub

	encode gzip

	php_fastcgi unix//run/php/php8.4-fpm.sock

	file_server

	# HTML pages - no cache
	@html {
		path *.php /
	}
	header @html {
		Cache-Control "no-store, no-cache, must-revalidate"
		Pragma "no-cache"
	}

	# Versioned assets - 1 year cache
	@versioned {
		path /assets/*
		query v=*
	}
	header @versioned {
		Cache-Control "public, max-age=31536000, immutable"
		Vary "Accept-Encoding"
	}

	# Images (logo, favicon) - 1 year cache
	@images {
		path /assets/base/images/*
	}
	header @images {
		Cache-Control "public, max-age=31536000, immutable"
		Vary "Accept-Encoding"
	}

	# Other assets - short cache for development
	@assets {
		not path /assets/* query v=*
		not path /assets/base/images/*
		path /assets/*
	}
	header @assets {
		Cache-Control "public, max-age=60"
		Vary "Accept-Encoding"
	}

	header {
		X-Content-Type-Options "nosniff"
		Referrer-Policy "strict-origin-when-cross-origin"
		-Server
	}

	@hidden {
		path_regexp hidden ^/\.
	}
	respond @hidden 403
}

# Production domain (uncomment and configure when deploying)
