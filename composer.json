{
  "name": "infinri/portfolio",
  "description": "Infinri: Website development, hosting, and maintenance platform. Modular PHP application for small business websites with transparent pricing and fast delivery.",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.4",
    "guzzlehttp/guzzle": "^7.10",
    "nyholm/psr7": "^1.8",
    "spiral/roadrunner-http": "^3.5",
    "spiral/roadrunner-worker": "^3.6",
    "symfony/console": "^7.3",
    "symfony/mailer": "^7.3",
    "symfony/validator": "^7.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.89",
    "mockery/mockery": "^1.6",
    "pestphp/pest": "^3.8",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpunit/phpunit": "^11.5",
    "squizlabs/php_codesniffer": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "App\\Core\\": "app/Core/",
      "App\\Modules\\": "app/Modules/"
    },
    "files": [
      "app/Core/Support/helpers.php",
      "app/Core/Support/security_helpers.php",
      "app/Core/Support/cookie_helpers.php",
      "app/Core/Support/auth_helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Tests\\Fixtures\\": "tests/Fixtures/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "s:up": "php bin/console setup:update",
    "minify": "php bin/console setup:minify"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
